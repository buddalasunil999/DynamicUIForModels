@model List<DynamicUIForModels.Dynamic.GenericModel>
@{
    ViewData["Title"] = "Home Page";
}
<h1>Edit Model Dynamically</h1>
<div class="row">
    <div class="col-xs-12">
        <form asp-action="Save">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-group">
                    <label>@Model[i].Key</label>
                    <input type="hidden" asp-for="@Model[i].Key" />
                    <div>
                        <input asp-for="@Model[i].Value" />
                        <span asp-validation-for="@Model[i].Value"></span>
                    </div>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
